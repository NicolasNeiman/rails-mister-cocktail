<div class="container">
  <h3><%= @cocktail.name %> </h3>

  <h4>Recipe</h3>
  <ul>
    <% @cocktail.doses.each do |dose| %>
      <li> <%= dose.ingredient.name %>  - <%= dose.description  %> - 
           <%= link_to "Remove", 
                       dose_path(dose),
                       method: :delete,
                       data: { confirm: "Are you sure?" } %></li>
    <% end %>
  </ul>
</div>
