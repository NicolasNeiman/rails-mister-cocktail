<h1><%= @cocktail.name %> </h1>

<h3>Recipe</h3>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li> <%= dose.ingredient.name %>  - <%= dose.description  %> - 
         <%= link_to "Remove", 
                     dose_path(dose),
                     method: :delete,
                     data: { confirm: "Are you sure?" } %></li>
  <% end %>
</ul>