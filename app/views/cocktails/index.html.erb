<div class="container">

  <div class="row">

    <div class="col-12 col-lg-8">

      <div class="row justify-content-center">
        <div class="col-12">
          <h3>Drink list</h3>
        </div>
      </div>

      <div class="row">
        <% @cocktails.each do |cocktail| %>
          <div class="col-12 col-lg-4 " >
              <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), 
                                             url('<%= cl_image_path cocktail.photo.key if cocktail.photo.attached? %>')">
                <%= link_to cocktail.name, cocktail_path(cocktail) %>
              </div>
          </div>
        <% end %>
      </div>
    </div>

    <div class="col-12 col-lg-4">
      <div class="row">
          <h3>Make your own Cocktail</h3>

        <%= simple_form_for @cocktail do |f| %>
          <%= f.input :name %>
          <%= f.input :photo, as: :file %>
          <%= f.submit %>
        <% end %>
      </div>
    </div>
  </div>
</div>